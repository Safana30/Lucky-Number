<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LuckyNum" parent="Theme.MaterialComponents.DayNight">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/purple_700</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">

        <!--title colour-->
        <item name="android:textColor">@color/black</item>
        <!--Radio button unchecked-->
        <item name="android:colorControlNormal">@color/Gray</item>
        <!--radio button checked-->
        <item name="android:colorControlActivated">@color/purple_900</item>
        <!--List item on click highlight colour-->
        <item name="android:colorControlHighlight">@color/purple_500</item>
        <item name="colorAccent">@color/black</item>
    </style>
</resources>